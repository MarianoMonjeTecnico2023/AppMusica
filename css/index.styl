@import url('https://fonts.googleapis.com/css?family=Roboto+Condensed:300,300italic,regular,italic,700,700italic');

//Fuentes
$roboto = 'Roboto Condensed', Helvetica, Arial, sans-serif

//Paleta de colores
$naranja = #fe7f2d
$negro = #2a2d34
$gris = #7e7f83
$blanco = #eaeaea
$celeste = #16bac5

*
    margin 0
    padding 0
    font-size 100%

body
    background-color $blanco

.contenedorBusqueda
    display flex
    align-items center
    justify-content center
    flex-flow column
    background $negro
    padding-top 20px
    padding-bottom 20px
    font-family $roboto
    .titulobuscador
        font-size 3.5em
        padding: 15px
        text-transform: uppercase
        color $naranja
        span
            color darken($naranja,25%)
    input
        appearance none
        -webkit-appearance: none
        border none
        border-radius 5px
        width: calc(100% - 20px)
        padding-top 15px
        padding-bottom 15px
        font-size 1.5em
        cursor pointer
        outline none !important
        text-align: center
    button
        appearance none 
        -webkit-appearance: none
        margin-top 10px
        padding 15px
        width calc(100% - 20px)
        font-size 1.5em
        border-radius 5px
        border none
        cursor pointer
        outline none !important
        background-color $naranja
        color $blanco

#rp-q
    display flex
    flex-flow row
    justify-content space-around
    align-items: flex-start
    padding 20px 10px
    #rp-q-a, #rp-q-b, #rp-q-t
        background $negro
        padding 10px
        border-radius 5px
        width calc(33vw - 40px)
        .sin-datos
            color lighten($negro,35%)
            font-family $roboto

.tituloColumna
    display block
    color white
    font-family $roboto
    font-size 1.5em
    margin-bottom 15px

.contenedor-album
    margin 5px
    background lighten($negro,15%)
    padding 5px
    font-family $roboto
    border-radius: 5px
    display flex
    flex-flow: row
    align-items: center
    img
        width 25%
        border-radius 5px
    .contenedor-datos-album
        margin-left 10px
        h2
            color white
            font-size 1.5em
        span
            color white
 .contenedor-artista
    margin 6px
    background lighten($negro,18%)
    padding 6px
    font-family $roboto
    border-rausdius: 7px
    display flex
    flex-flow: row
    align-items: center
    img 
        width 22%
        border-radius 6px
    .contenedor-artista-datos
        margin-left 10px
        h2
            color white
            font-size 1.5em
        span
            color white
.contenedor-canciones
    margin 7px
    background lighten($negro,20%)
    padding 8px
    font-family $roboto
    border-radius: 8px
    display flex
    flex-flow: column
    align-items flex-start
    h2
        color white !important
        font-size 1.5em !important
    span
        color white !important

.boton {
    text-decoration: blue!important;
    padding: 10px !important;
    font-weight: 600 !important;
    font-size: 20px !important;
    color: #ffffff;
    background-color: #1883ba !important;
    border-radius: 6px !important;
    border: 2px solid #0016b0 !important;
    text-align: center !important;
    font-family:'Roboto Condensed' !important;
    width: 20% !important;
    margin: 10px !important;
    
}
.popupContenedor{
    position: fixed;
    width: 100vw;
    height: 100vh;
    top: 0px;
    left: 0px;
    background-color: rgba(0, 0, 0,0.8);
    z-index: 99999999;
    display: none;
    flex-flow: column;
    align-items: center;
    justify-content: center;
}
.popupContenedor button{
    position: absolute;
    top: 30px;
    right: 40px;
    width: 40px;
    height: 40px;
}
.popupContenedor .popup{
    position: relative;
    background-color: white;
    width: 80vw;
    height: 80vh;
    padding: 50px;
    }
iframe{
    margin: 0 auto;
}